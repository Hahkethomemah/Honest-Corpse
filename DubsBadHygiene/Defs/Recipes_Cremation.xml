							<autoStripCorpses>false</autoStripCorpses>
							<workSkill>Intellectual</workSkill>
							<workSkillLearnFactor>0.25</workSkillLearnFactor>
							<ingredients>
							  <li>
								<filter>
								  <categories>
									<li>Corpses</li>
								  </categories>
								</filter>
								<count>1</count>
							  </li>
							</ingredients>
							<fixedIngredientFilter>
							  <categories>
								<li>Corpses</li>
							  </categories>
							  <disallowedCategories>
										<li>CorpsesMechanoid</li>
									</disallowedCategories>
							</fixedIngredientFilter>
