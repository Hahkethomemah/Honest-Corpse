<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>LiquefyCorpseAtCrematorium</defName>
    <label>Liquefy corpse</label>
    <description>Make sure valuable fats melt safely and drain down before the body burns.</description>
    <jobString>Liquefying a corpse. Also, thinking about the transience of life and death.
    </jobString>
    <workAmount>420</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <autoStripCorpses>true</autoStripCorpses>
    <workSkill>Intellectual</workSkill>
    <workSkillLearnFactor>0.25</workSkillLearnFactor>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Corpses</li>
      </categories>
      <disallowedCategories>
				<li>CorpsesMechanoid</li>
        <li>CorpsesAnimal</li>
			</disallowedCategories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <thingDefs>
        <li>Corpse_Human</li>
      </thingDefs>
      <specialFiltersToAllow>
        <li>AllowCorpsesStranger</li>
      </specialFiltersToAllow>
    </defaultIngredientFilter>
    <products>
			<Chemfuel>10</Chemfuel>
		</products>
    <recipeUsers>
			<li>ElectricCrematorium</li>
		</recipeUsers>
  </RecipeDef>

